{
  "name": "smarteditor",
  "version": "1.0.0",
  "description": "A React component library providing a reusable rich text editor powered by TipTap",
  "type": "module",
  "main": "./dist/smarteditor.umd.js",
  "module": "./dist/smarteditor.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/smarteditor.es.js",
      "require": "./dist/smarteditor.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@tiptap/extension-image": "^2.14.1",
    "@tiptap/extension-link": "^2.14.1",
    "@tiptap/extension-placeholder": "^2.14.1",
    "@tiptap/extension-strike": "^2.14.1",
    "@tiptap/extension-table": "^2.14.1",
    "@tiptap/extension-table-cell": "^2.14.1",
    "@tiptap/extension-table-header": "^2.14.1",
    "@tiptap/extension-table-row": "^2.14.1",
    "@tiptap/extension-underline": "^2.14.1",
    "@tiptap/react": "^2.4.0",
    "@tiptap/starter-kit": "^2.4.0",
    "lucide-react": "^0.518.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.0.0"
  },
  "keywords": [
    "react",
    "typescript",
    "rich-text-editor",
    "tiptap",
    "component-library"
  ],
  "author": "",
  "license": "MIT"
}